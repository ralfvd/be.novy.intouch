{
  "id": "be.novy.intouch",
  "name": {
    "en": "Novy Intouch"
  },
  "version": "0.0.1",
  "compatibility": ">=0.10",
  "author": {
    "name": "Ralf van Dooren",
    "email": "ralfvd@gmail.com"
  },
  "signals": {
    "433": {
      "aDoorbell": {
        "sof": [
    		336,
    		409
    	],
    	"eof": [
    		335
    	],
    	"words": [
    		[
    			356,
    			398
    		],
    		[
    			710,
    			756
    		]
    	],
    	"interval": 10000,
    	"sensitivity": 0.7,
    	"repetitions": 20,
    	"minimalLength": 17,
    	"maximalLength": 17


      }
    }
  },
  "drivers": [
    {
      "id": "adoorbell",
      "name": {
        "en": ""
      },
      "class": "light",
      "capabilities": [
        "onoff"
      ],
      "images": {
        "small": "./433_generator/assets/adoorbell/images/small.jpg",
        "large": "./433_generator/assets/adoorbell/images/large.jpg"
      },
      "pair": [
        {
          "id": "generic_imitate",
          "navigation": {}
        },
        {
          "id": "generic_test_button_2",
          "navigation": {
            "prev": "generic_imitate",
            "next": "generic_done"
          }
        },
        {
          "id": "generic_done",
          "navigation": {}
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "adoorbell:received",
        "title": {
          "en": "deviceClasses.doorbell.triggers.received.title"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=adoorbell"
          }
        ]
      }
    ],
    "conditions": [],
    "actions": [
      {
        "id": "adoorbell:send",
        "title": {
          "en": "deviceClasses.doorbell.triggers.send.title"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=adoorbell"
          }
        ]
      }
    ]
  },
  "permissions": [
    "homey:wireless:433"
  ]
}

{
  "id": "be.novy.intouch",
  "name": {
    "en": "Novy Intouch"
  },
  "version": "0.0.1",
  "compatibility": ">=0.10",
  "author": {
    "name": "Ralf van Dooren",
    "email": "ralfvd@gmail.com"
  },
  "signals": {
    "433": {
      "intouchlight": {
        "sof": [
          336
        ],
        "eof": [],
        "words": [
          [
            401,
            711
          ],
          [
            755,
            357
          ]
        ],
        "interval": 10000,
        "sensitivity": 0.7,
        "repetitions": 20,
        "minimalLength": 18,
        "maximalLength": 18
      }
    }
  },
  "drivers": [
    {
      "id": "aintouchlight",
      "name": {
        "en": "Novy Intouch"
      },
      "class": "button",
      "capabilities": [
        "button"
      ],
      "images": {
        "small": "./433_generator/assets/aintouchlight/images/small.jpg",
        "large": "./433_generator/assets/aintouchlight/images/large.jpg"
      },
      "pair": [
        {
          "id": "generic_imitate",
          "navigation": {}
        },
        {
          "id": "generic_test_button_2",
          "navigation": {
            "prev": "generic_imitate",
            "next": "generic_done"
          }
        },
        {
          "id": "generic_done",
          "navigation": {}
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "aintouchlight:received",
        "title": {
          "en": "Signal received from remote"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=aintouchlight"
          }
        ]
      }
    ],
    "conditions": [],
    "actions": [
      {
        "id": "aintouchlight:send",
        "title": {
          "en": "Send light command to the damper"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=aintouchlight"
          }
        ]
      }
    ]
  },
  "permissions": [
    "homey:wireless:433"
  ]
}
